<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <!--
        Added the entity ProcessInstanceSubscription.
    -->
    <changeSet id="20240221000001-1" author="daniel">
        <createTable tableName="process_instance_subscription">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="subscriber_type" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="subscriber_id" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="date" type="date">
                <constraints nullable="true" />
            </column>
            <column name="notify_all" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="notify_tasks" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="notify_attachments" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="notify_notes" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="notify_chats" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="process_instance_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
    </changeSet>

    <!-- jhipster-needle-liquibase-add-changeset - JHipster will add changesets here -->
</databaseChangeLog>
